{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["json"],
  "rules": {
    "indent": ["error", 2],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "quotes": ["error","single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": "error"
  }
}